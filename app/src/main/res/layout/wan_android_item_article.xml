<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:padding="10dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textSize="24sp"
        android:gravity="center"
        android:id="@+id/tv_article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title"
        />
    <TextView
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:id="@+id/tv_article_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_article_title"
        app:layout_constraintEnd_toStartOf="@id/rb_article_zan"
        android:text="author" />
    <CheckBox
        android:id="@+id/rb_article_zan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/wan_android_zan"
        app:layout_constraintStart_toEndOf="@id/tv_article_author"
        app:layout_constraintEnd_toStartOf="@id/rb_article_collect"
        app:layout_constraintTop_toBottomOf="@id/tv_article_title"/>
    <CheckBox
        android:id="@+id/rb_article_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/wan_android_collect"
        app:layout_constraintStart_toEndOf="@id/rb_article_zan"
        app:layout_constraintEnd_toStartOf="@id/tv_article_publish_time"
        app:layout_constraintTop_toBottomOf="@id/tv_article_title"/>
    <TextView
        android:id="@+id/tv_article_publish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_article_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rb_article_collect"
        android:text="publish_time"/>
</android.support.constraint.ConstraintLayout>