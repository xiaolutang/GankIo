<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:clickable="true"
    android:focusable="true">

    <!--资讯来源-->
    <ImageView
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/iv_content_source"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/idel_reader_content_source"
        />

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toRightOf="@id/iv_content_source"
        android:layout_toEndOf="@id/iv_content_source"
        android:id="@+id/tv_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="标题"/>

    <!--内容的创建时间-->
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toRightOf="@id/iv_content_source"
        android:layout_toEndOf="@id/iv_content_source"
        android:layout_alignBottom="@id/tv_content_title"
        android:layout_below="@id/tv_content_title"
        android:id="@+id/tv_content_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="时间"/>



</RelativeLayout>